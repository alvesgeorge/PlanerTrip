                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dia 1"
                    android:textSize="12sp"
                    android:textColor="#FF5722"
                    android:background="#FFE0DB"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp" />

