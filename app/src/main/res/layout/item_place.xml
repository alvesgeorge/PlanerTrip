                    android:id="@+id/textPlaceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00"
                    android:textSize="12sp"
                    android:textColor="#2196F3"
                    android:background="#E3F2FD"
