<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo! ✈️"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O que você gostaria de fazer hoje?"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="48dp"
        android:textAlignment="center"
        android:gravity="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNewTrip"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:text="🚀 Nova Viagem"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonViewTrips"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:text="📋 Minhas Viagens"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organize • Planeje • Viaje"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="24dp" />

</LinearLayout>