<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FF5722"
            android:padding="16dp"
            android:elevation="4dp">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="📍 Adicionar Local"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingStart="16dp" />

        </LinearLayout>

        <!-- Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Place Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                app:hintTextColor="#FF5722"
                app:boxStrokeColor="#FF5722">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome do local"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address - VERSÃO CORRIGIDA -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@android:drawable/ic_menu_mapmode"
                app:hintTextColor="#FF5722"
                app:boxStrokeColor="#FF5722">

                <AutoCompleteTextView
                    android:id="@+id/editPlaceAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Endereço"
                    android:inputType="textPostalAddress"
                    android:completionThreshold="3"
                    android:dropDownHeight="200dp"
                    android:padding="16dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@android:drawable/ic_menu_info_details"
                app:hintTextColor="#FF5722"
                app:boxStrokeColor="#FF5722">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPlaceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descrição (opcional)"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="4" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Day -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📅 Dia da Visita"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerDay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/btn_dropdown"
                android:padding="12dp" />

            <!-- Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏷️ Categoria"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/btn_dropdown"
                android:padding="12dp" />

            <!-- Visit Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ Tempo de Visita"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:hintTextColor="#FF5722"
                    app:boxStrokeColor="#FF5722"
                    app:suffixText="h">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editVisitDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Duração"
                        android:inputType="numberDecimal"
                        android:text="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:hintTextColor="#FF5722"
                    app:boxStrokeColor="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editPreferredTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Horário preferido"
                        android:inputType="time"
                        android:focusable="false"
                        android:clickable="true" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Priority -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ Prioridade"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioLowPriority"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🟢 Baixa"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radioMediumPriority"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🟡 Média"
                    android:textSize="14sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioHighPriority"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🔴 Alta"
                    android:textSize="14sp" />

            </RadioGroup>

            <!-- Cost -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:startIconDrawable="@android:drawable/ic_menu_agenda"
                app:hintTextColor="#FF5722"
                app:boxStrokeColor="#FF5722"
                app:prefixText="R$ ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPlaceCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Custo estimado (opcional)"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/buttonSavePlace"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="💾 Salvar Local"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>