<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âž• Nova Tarefa"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="32dp" />

        <!-- Viagem -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viagem"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerTrip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo da Tarefa"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ex: Comprar passagem aÃ©rea"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- DescriÃ§Ã£o -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescriÃ§Ã£o"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Detalhes da tarefa..."
            android:background="#FFFFFF"
            android:padding="12dp"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <!-- Prioridade -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridade"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerPriority"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Categoria -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Data de Vencimento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Vencimento (opcional)"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editDueDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ex: 15/01/2024"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

        <!-- BotÃµes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Cancelar"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#757575" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ðŸ’¾ Salvar"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preencha os campos para criar a tarefa"
            android:textSize="14sp"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>