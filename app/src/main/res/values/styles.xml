<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange_light</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <!-- Estilo para botões principais -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Estilo para botões secundários -->
    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Estilo para FABs -->
    <style name="CustomFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_orange</item>
        <item name="tint">@android:color/white</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Estilo para Cards -->
    <style name="CustomCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Estilo para títulos -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para subtítulos -->
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo para chips -->
    <style name="CustomChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/primary_blue_light</item>
        <item name="android:textColor">@color/primary_blue_dark</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>